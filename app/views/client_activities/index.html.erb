<p id="notice"><%= notice %></p>

<h1>Client Activities</h1>

<table>
  <thead>
    <tr>
      <th>Object</th>
      <th>Associate</th>
      <th>Assistant</th>
      <th>Activity expired</th>
      <th>Certificate expired</th>
      <th>Serial number</th>
      <th>Offline location</th>
      <th>Description</th>
      <th>Status</th>
      <th>Deleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_activities.each do |client_activity| %>
      <tr>
        <td><%= client_activity.object %></td>
        <td><%= client_activity.associate %></td>
        <td><%= client_activity.assistant %></td>
        <td><%= client_activity.activity_expired %></td>
        <td><%= client_activity.certificate_expired %></td>
        <td><%= client_activity.serial_number %></td>
        <td><%= client_activity.offline_location %></td>
        <td><%= client_activity.description %></td>
        <td><%= client_activity.status %></td>
        <td><%= client_activity.deleted %></td>
        <td><%= link_to 'Show', client_activity %></td>
        <td><%= link_to 'Edit', edit_client_activity_path(client_activity) %></td>
        <td><%= link_to 'Destroy', client_activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

