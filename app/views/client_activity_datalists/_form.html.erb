      <%= form.file_field :file %>
    </div>

    <div class="field form-group">
      <%= form.label :description %>
      <br>
      <%= form.text_area :description, class:"form-control" %>
    </div>

    <div class="actions">
      <%= form.submit "Tambahkan Data", class:"btn btn-primary"%>
    </div>
  <% end %>
</div>