<div class="container" id="tableBox">
  <%= form_with(model: client_activity_datalist) do |form| %>
    <% if client_activity_datalist.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(client_activity_datalist.errors.count, "error") %> prohibited this client_activity_datalist from being saved:</h2>

        <ul>
          <% client_activity_datalist.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <p>
        <% if !client_activity_datalist.file.filename.nil? %>
