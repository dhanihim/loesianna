<div class="container" id="tableBox">
  <%= form_with(model: client_personal_file) do |form| %>
    <% if client_personal_file.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(client_personal_file.errors.count, "error") %> prohibited this client_personal_file from being saved:</h2>

        <ul>
          <% client_personal_file.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <p>
        <% if !client_personal_file.file.filename.nil? %>
          <strong>Unggahan terakhir:</strong>
          <%= link_to 'Download', client_personal_file.file, download: "" %>
        <% end %>
      </p>

      <%= form.file_field :file %>
    </div>

    <div class="field form-group">
      <%= form.label :description %>
      <br>
      <%= form.text_area :description, class:"form-control" %>
    </div>

    <div class="actions">
      <%= form.submit "Tambahkan Data", class:"btn btn-primary"%>
    </div>
  <% end %>
</div>