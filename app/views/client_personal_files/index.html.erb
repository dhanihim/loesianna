<h1>Client Personal Files</h1>

<div class="container" id="tableBox">
<table class="table">
  <thead>
    <tr>
      <th>Client</th>
      <th>Personal File Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_personal_files.each do |client_personal_file| %>
      <tr>
        <td><%= client_personal_file.client.name %></td>
        <td><%= client_personal_file.personal_file.name %></td>
        <td><%= link_to 'Show', client_personal_file %></td>
        <td><%= link_to 'Edit', edit_client_personal_file_path(client_personal_file) %></td>
        <td><%= link_to 'Destroy', client_personal_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Client Personal File', new_client_personal_file_path %>
