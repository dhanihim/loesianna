<div class="container" id="tableBox">

  <%= form_with(model: personal_file) do |form| %>
    <% if personal_file.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(personal_file.errors.count, "error") %> prohibited this personal_file from being saved:</h2>

        <ul>
          <% personal_file.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= form.label :name, "Nama" %>
      <%= form.text_field :name, class: "form-control", autocomplete:"off", required:"true" %>
    </div>

    <div class="field form-group">
      <%= form.label :description, "Deskripsi" %>
      <%= form.text_field :description, class: "form-control", autocomplete:"off" %>
    </div>

    <div class="actions">
      <%= form.submit "Tambahkan", class:"btn btn-primary" %>
    </div>
  <% end %>

</div>
