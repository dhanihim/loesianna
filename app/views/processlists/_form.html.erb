<%= form_with(model: processlist) do |form| %>
  <% if processlist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(processlist.errors.count, "error") %> prohibited this processlist from being saved:</h2>

      <ul>
        <% processlist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :activity_id, "Aktifitas" %>
    <%= form.collection_select :activity_id, Activity.order(:name), :id, :name, {:selected => params[:activity_id]}, {class:"form-control"} %>
  </div>

  <div class="field form-group">
    <%= form.label :name, "Nama" %>
    <%= form.text_field :name, class: "form-control", autocomplete:"off", required:"true", autofocus:"true" %>
  </div>

  <div class="field form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control", autocomplete:"off"%>
  </div>

  <div class="actions">
    <%= form.submit "Tambahkan Data", class:"btn btn-primary" %>
  </div>
<% end %>
